{
  "compilerOptions": {
    "types": ["mocha", "chai"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["dom", "es2019"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2019",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "./dist"
  },
  "ts-node": {
    "esm": false,
    "experimentalSpecifierResolution": "node"
  }
}
